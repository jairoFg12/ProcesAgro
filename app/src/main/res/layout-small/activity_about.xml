<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/about_main_layout"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:contentDescription="@string/about"
            android:layout_gravity="top"
            android:src="@drawable/aboutf_h" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creada por"
            android:id="@+id/textView20"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jhonatan Acelas Arévalo"
                android:id="@+id/textView21" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:id="@+id/imageView22"
                    android:src="@drawable/ic_icono_twitter5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@JhonatanAcelas"
                    android:id="@+id/textView23"
                    android:gravity="center_vertical"
                    android:padding="5dp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jessica Cruz Alonso"
                android:id="@+id/textView24" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:id="@+id/imageView26"
                    android:src="@drawable/ic_icono_twitter5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@Jessicacruza"
                    android:id="@+id/textView25"
                    android:gravity="center_vertical"
                    android:padding="5dp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jairo Alonso Fernández Vega"
                android:id="@+id/textView27" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:id="@+id/imageView28"
                    android:src="@drawable/ic_icono_twitter5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@tucompualdia"
                    android:id="@+id/textView29"
                    android:gravity="center_vertical"
                    android:padding="5dp" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="© Copyright 2014. Todos los derechos reservados.\nEsta aplicación requiere internet y puede consumir recursos de su plan de datos."
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/aboutf_foot_m" />

    </LinearLayout>

</ScrollView>
