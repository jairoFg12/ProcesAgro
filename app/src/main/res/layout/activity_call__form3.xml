<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wyble.procesagro.Call_Form3Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/form2_layout"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Datos del Solicitante"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.11"
            android:gravity="center_vertical|center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_solic"
            android:layout_gravity="center_horizontal"
            android:hint="Nombre solicitante"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/cedula_solic"
            android:layout_gravity="center_horizontal"
            android:hint="Cédula solicitante" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/telefono_solic"
            android:layout_gravity="center_horizontal"
            android:hint="Télefono fijo" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/celular_solic"
            android:layout_gravity="center_horizontal"
            android:hint="Télefono celular" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#0099CC"
        android:id="@+id/relativeLayout"
        android:gravity="center_vertical|center_horizontal">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:drawableTop="@android:drawable/ic_media_next"
            android:id="@+id/form3_next"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#0099cc" />

    </RelativeLayout>

</RelativeLayout>
